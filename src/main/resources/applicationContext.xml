<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--将EmpService接口的子类声明到spring容器中,让spring容器创建该类的实例,id值首字母小写并且唯一-->
    <bean id="empService" class="com.github.gudian1618.cgb2011spring.service.EmpServiceImpl"></bean>

    <!--将EmpDao接口的子类声明到spring容器中,让spring容器创建该类的实例,id值首字母小写并且唯一-->
    <bean id="empDao" class="com.github.gudian1618.cgb2011spring.dao.EmpDaoImpl"></bean>

</beans>
